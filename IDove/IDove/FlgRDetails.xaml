        <TextBox x:Name="TX_Coeficient" HorizontalAlignment="Left" Height="21" Margin="116,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>
        <TextBox x:Name="TX_GMP" HorizontalAlignment="Left" Height="21" Margin="116,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>
        <TextBox x:Name="TX_Points" HorizontalAlignment="Left" Height="20" Margin="407,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>
        <TextBox x:Name="TX_Distance" HorizontalAlignment="Left" Height="19" Margin="407,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>
